<!-- search form -->
<%= form_tag(home_index_path, :method => "get", id: "search-form", :validate=>true) do %>
	<%= select_tag :rank, options_for_select(@ranks, params[:rank]), :prompt => 'Current Rank' %>
	<%= select_tag :year, options_for_select(@years, params[:year]), :prompt => 'Years of Service' %>
	<%= submit_tag "Calculate", :name => nil %>
<% end %>

<!-- return results after search -->
<% if params[:rank].present? && params[:year].present? %>

	<% if @result.each do |a| %>
		<%= number_to_currency(a.pay) %>
	<% end.empty? %>
		Please provide valid rank and years of service
		<%= form_tag(home_index_path, :method => "get", id: "search-form", :validate=>true) do %>
			<%= select_tag :rank, options_for_select(@ranks, params[:rank]), :prompt => 'Current Rank' %>
			<%= select_tag :year, options_for_select(@years, params[:year]), :prompt => 'Years of Service' %>
			<%= submit_tag "Calculate", :name => nil %>
		<% end %>
	<% end %>

<% end %>