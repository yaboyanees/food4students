<div class="retCalc">
	<h3>From Retirement <span class="showAnnRet" style="display:none;">: $<input type="text" name="retTotal" id="retTotal" value="" style="border: none;" readonly></span><a class="toggleRet">Details</a></h3></h3>
	<h4 class="retScale" style="display:none;">
		<span id="adultName11"><%= @household.fillerName %></span> Gets $<input type="text" name="ret" value="" placeholder="100">
		<select id="retFreqVal">	
			<option value="0">how often?</option>
			<option value="52">weekly</option>
			<option value="26">every two weeks</option>
			<option value="24">twice a month</option>
			<option value="12">monthly</option>
		</select>
		<br /><br />	
		which is roughly a gross annual income of $<input type="text" name="retTotal" id="retTotal" value="" style="border: none;" readonly>
	</h4>	
	
	<%= a.hidden_field :ret, :id=>"retTotal" %>
</div>


<script>

	$("#retFreqVal").change(function() {
		var a = $('input[name="ret"]').val();
		var b = $(this).val();
		$('input[id="retTotal"]').val(a * b);
		$('.retScale').fadeOut(2000);
		$('.showAnnRet').show();
		$(".toggleRet").show();
		
		$('.retCalc').toggleClass("active");
	});
	
	$(".toggleRet").click(function() {
        $('.retCalc').toggleClass("active");
	
		$('.retScale').toggle();
		$('.showAnnRet').show();
	});
	
</script>
