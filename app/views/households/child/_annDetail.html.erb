	<div class="annCalc">
		<h3>From An Annuity <span class="showAnnAnn" style="display:none;">: $<input type="text" name="annTotal" id="annTotal" value="" style="border: none;" readonly></span><a class="toggleAnn">Details</a></h3>
		<h4 class="annScale" style="display:none;">
			<span id="kidName3"></span> gets $<input type="text" name="ann" value="" placeholder="100">
			<select id="annFreqVal">
				<option value="0">how often?</option>
				<option value="52">weekly</option>
				<option value="26">every two weeks</option>
				<option value="24">twice a month</option>
				<option value="12">monthly</option>
			</select>
			<br /><br />
			which is roughly $<input type="text" name="annTotal" id="annTotal" value="" style="border: none;" readonly> annually
		</h4>		
			
		<%= c.hidden_field :ann, :id=>"annTotal" %>
	</div>
	
<script>

	$("#annFreqVal").change(function() {
		var a = $('input[name="ann"]').val();
		var b = $(this).val();
		$('input[id="annTotal"]').val(a * b);
		$('.annScale').fadeOut(2000);
		$('.showAnnAnn').show();
		$(".toggleAnn").show();
		
		$('.annCalc').toggleClass("active");
	});
	
	$(".toggleAnn").click(function() {
        $('.annCalc').toggleClass("active");
	
		$('.annScale').toggle();
		$('.showAnnAnn').show();
	});
	
</script>
